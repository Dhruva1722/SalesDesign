<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <TableLayout
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TableRow
                >

                <TextView
                    android:id="@+id/instrumentType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MFM DC"
                    android:padding="5dp" />
                <TextView
                    android:id="@+id/stockNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="200"
                    android:padding="5dp" />
                <TextView
                    android:id="@+id/targetSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A20"
                    android:padding="5dp" />


            </TableRow>
        </TableLayout>

</RelativeLayout>