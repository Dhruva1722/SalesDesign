<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SalesAnalayticsActivity"
    android:background="#e3e8ec">

    <RelativeLayout
        android:id="@+id/toolBarLy"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:background="#ffff"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analaytics"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toRightOf="@id/backArrow"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/notificationBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_notifications_24"
            android:layout_toLeftOf="@id/helpBtn"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/helpBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_help_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/toolBarLy"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rectangle_card3">

        <TextView
            android:id="@+id/targetTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#404142"/>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/card1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rectangle_card2">


        <TextView
            android:id="@+id/stockTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining Stocks"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#2E2F30"/>

        <TextView
            android:id="@+id/instrumentTypeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type :"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/stockTxt"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#808183"/>

        <TextView
            android:id="@+id/instrumentTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MFM-14"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/stockTxt"
            android:layout_toRightOf="@id/instrumentTypeTxt"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#808183"/>

        <TextView
            android:id="@+id/stockTypeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock :"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/instrumentTypeTxt"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#808183"/>

        <TextView
            android:id="@+id/numberOfStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/instrumentTypeTxt"
            android:layout_toRightOf="@id/stockTypeTxt"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#808183"/>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/card2"
        android:layout_margin="10dp"
        android:background="@drawable/rectangle_card1">


        <TextView
            android:id="@+id/reasonTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason for Remaining Stocks"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#2E2F30"/>

    </RelativeLayout>



</RelativeLayout>