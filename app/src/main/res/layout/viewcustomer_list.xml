<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/listcard"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:text="Nick Jhons"
            android:textColor="@color/white"
            android:textSize="17sp"/>


        <TextView
            android:id="@+id/viewPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:text="232435454"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/viewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:text="Multispan Control Instrument "
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/viewIndustryType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:text="Multispan Control Instrument "
            android:textColor="@color/white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/viewInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:text="Reason about visiting customer"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>



</RelativeLayout>